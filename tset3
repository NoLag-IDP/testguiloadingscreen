local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(0.9, 0, 0, 24)
statusLabel.Position = UDim2.new(0.05, 0, 0, 90)
statusLabel.Text = ""
statusLabel.Font = Enum.Font.FredokaOne
