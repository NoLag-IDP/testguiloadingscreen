closeButton.MouseButton1Click:Connect(function() screenGui:Destroy() end)

local textBox = Instance.new("TextBox", frame)
textBox.Size = UDim2.new(0.9, 0, 0, 36)
textBox.Position = UDim2.new(0.05, 0, 0, 50)
